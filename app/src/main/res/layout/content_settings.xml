<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorVeryLightGrey"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_settings"
        tools:context="com.mastercard.labs.mpqrmerchant.settings.SettingsActivity">

    <ImageView
            android:id="@+id/img_merchant_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/merchant_logo"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/logo"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img_merchant_logo"
            android:scrollbars="vertical"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />

</RelativeLayout>
